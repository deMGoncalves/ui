{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "node",
    "module": "esnext",
    "paths": {
      "@artifact/*": ["./prelude/artifact/*"],
      "@directive/*": ["./prelude/directive/*"],
      "@elements/*": ["./prelude/elements/*"],
      "@pixel/*": ["./prelude/pixel/*"],
      "@polyfill/*": ["./prelude/polyfill/*"],
      "@standard/*": ["./prelude/standard/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2015"
  }
}
